<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlTweetView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/cardview_light_background">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/ivProfile"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="SAM @samG" />

    <TextView
        android:id="@+id/tvSymbole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/tvScreenName"
        android:fontFamily="sans-serif-light"
        android:text=".@"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/tvSymbole"
        android:fontFamily="sans-serif-light"
        android:textSize="14sp"
        tools:text="nfs_knmdis"

        />

    <TextView
        android:id="@+id/tvTweetBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUserName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/ivProfile"
        android:autoLink="all"
        android:fontFamily="sans-serif-medium"
        android:linksClickable="true"
        android:textSize="14sp"
        tools:text="Hi Guys! Its my first Tweet!" />

    <ImageView
        android:id="@+id/ivTweetImage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTweetBody"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/ivProfile"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        tools:text="10 ms" />
</RelativeLayout>